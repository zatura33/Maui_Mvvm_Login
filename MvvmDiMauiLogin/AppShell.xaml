<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MvvmDiMauiLogin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="using:MvvmDiMauiLogin.Views"
    xmlns:vm="using:MvvmDiMauiLogin.ViewModels"
    xmlns:constant="using:MvvmDiMauiLogin.Resources.Constant"
    Shell.FlyoutBehavior="Flyout" >
    <Shell.BindingContext>
        <vm:AppShellViewModel/>
    </Shell.BindingContext>
    
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"/>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage"
        IsVisible="{Binding IsConnected}"/>

    <ShellContent
        Title="EmployePage"
        ContentTemplate="{DataTemplate views:EmployePage}"
        Route="{x:Static Member=constant:Constants.EmployePageRoute}" 
        IsVisible="{Binding HasEmployeAccess}"/>

    <ShellContent
        Title="ClientPage"
        ContentTemplate="{DataTemplate views:ClientPage}"
        Route="{x:Static Member=constant:Constants.ClientPageRoute}"
        IsVisible="{Binding HasClientAccess}"/>

</Shell>
