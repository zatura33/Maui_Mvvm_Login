<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MvvmDiMauiLogin.ViewModels"
             xmlns:uiExtensions="clr-namespace:MvvmDiMauiLogin.UIExtensions"
             x:Class="MvvmDiMauiLogin.Views.ClientPage"
             Title="ClientPage">
    <ContentPage.BindingContext>
        <uiExtensions:ViewModelContextBinding x:TypeArguments="vm:ClientPageViewModel"/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label
                Text="Client"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>


</ContentPage>